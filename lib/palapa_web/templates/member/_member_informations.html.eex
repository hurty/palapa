<%= for info <- @member_informations do %>
  <div class="flex text-sm p-1">
    <div class="w-2/5 bg-grey-lightest rounded py-1 px-2 font-bold overflow-hidden">
      <%= PalapaWeb.MemberInformationView.information_type_label(info)%>
    </div>
    
    <div class="flex-1 border-b-2 mx-1 border-grey-lightest py-1 px-2">
      <%= info.value %>
    </div>
  </div>
<% end %>
