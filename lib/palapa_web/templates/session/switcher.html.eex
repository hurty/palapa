<div class="p-1">
  <div class="text-sm text-gray-800 font-bold mb-4 border-b py-1"><%= @current_account.name %></div>

  <ul class=" mb-2">
    <li><%= link("My profile", to: Routes.member_path(@conn, :show, @current_organization, @current_member), class: "text-gray-800 hover:underline") %></li>
    <li><%= link("Account settings", to: Routes.account_path(@conn, :edit), target: "_blank", class: "text-gray-800 hover:underline") %></li>
    <li><%= link("Log out", to: Routes.session_path(@conn, :delete), class: "text-blue-500 hover:underline", data: [controller: "link", action: "link#delete"]) %></li>
  </ul>
</div>
