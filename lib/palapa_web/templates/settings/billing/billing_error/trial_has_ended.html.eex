<div class="content page-layout">
  <div class="main-content" data-controller="message">
    <div class="card p-1 sm:p-8">
      <h2 class="text-center text-4xl"><%= gettext("Your trial period has ended") %></h2>

        <section>
          <p class="font-bold text-center my-4">
            <%= gettext("Your %{trial_duration_days} days trial period for the workspace \"%{organization_name}\" has ended.", 
              organization_name: @organization.name, 
              trial_duration_days: Palapa.Billing.trial_duration_days) %>
            <br>
            <%= gettext("Switch to a paid plan to continue and get:") %>
          </p>

          <div class="flex flex-wrap my-2 p-4 items-center justify-center text-xl">
            <div class="p-2 bg-green-100 rounded-lg ">
              <ul class="">
                <li><i class="fas fa-user-plus text-blue-500 mr-2"></i><%= gettext("Unlimited members") %></li>
                <li><i class="fas fa-users text-blue-500 mr-2"></i><%= gettext("Unlimited teams") %></li>
                <li><i class="fas fa-database text-blue-500 mr-2"></i><%= gettext("100 GB storage included") %></li>
                <li><i class="fas fa-life-ring text-blue-500 mr-2"></i><%= gettext("Premium email support") %></li>
              </ul>
            </div>
            
            <div class="border-green-500 border-2 rounded-lg p-2 mx-4 text-green-500 font-bold text-xl">
              <%= gettext("Only %{price_per_member_per_month}â‚¬/member/month", price_per_member_per_month: Palapa.Billing.price_per_member_per_month) %>
            </div>
          </div>

          <p class="my-8 text-center">
            <%= link("Upgrade your account", to: Routes.settings_customer_path(@conn, :show, @organization), class: "btn btn-green-500 text-xl my-4") %>
          </p>
        </section>
      </div>
    </div>
  </div>
</div>
