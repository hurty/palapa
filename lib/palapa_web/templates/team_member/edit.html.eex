<div class="flex w-5/6 mx-auto">
  <div class="flex-initial w-1/4 mr-6 bg-white border-grey border rounded">
    <%= render PalapaWeb.MemberView, "_member_navigation.html", conn: @conn, member: @member %>
  </div>

  <div class="flex-auto">
    <div class="text-teal text-sm font-bold border-b pb-2 mb-6">Teams</div>
    <%= form_for @conn, member_team_member_path(@conn, :update, @member), [method: :put, as: "member_teams"], fn _ -> %>
      <ul class="list-reset">
        <%= for team <- @all_teams_in_organization do %>
          <li class="mb-2">
            <input type="checkbox" class="h-4 w-4" name="teams_ids[]" id="team_<%= team.id %>" value="<%= team.id %>" <%= if team in @member_teams, do: "checked", else: "" %>>
            <label for="team_<%= team.id %>"><%= team.name %></label>
          </li>
        <% end %>
      </ul>

      <%= submit "Update teams", class: "btn btn-blue" %>
    <% end %>
  </div>
</div>
