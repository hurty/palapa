<ul class="list-reset">
  <li class="block text-sm p-2 pl-4 pr-4 text-grey-darker border-b-2 border-grey-lighter">
    <%= @user.name %>
  </li>
  <li class="border-b border-grey-lighter">
    <%= link "Profile", to: user_path(@conn, :show, @user), class: "block p-4 text-grey-darker font-bold border-purple hover:bg-grey-lighter border-r-4" %>
  </li>

  <%= if Bodyguard.permit?(Palapa.Teams, :edit_user_teams, @conn.assigns.current_user) do %>
    <li>
      <%= link "Teams", to: user_user_team_path(@conn, :edit, @user), class: "block p-4 text-grey-darker font-bold border-grey-lighter hover:border-purple-light hover:bg-grey-lighter border-r-4"%>
    </li>
  <% end %>
</ul>
