<%= link to: Routes.message_path(@conn, :show, @current_organization, @search_result.message) do %>
<div class="flex px-2">
  <div class="w-8">
    <i class="fas fa-comment text-gray-600 text-sm"></i>
  </div>

  <div class="flex-1">
    <div class="text-green-500 font-bold text-sm"><%= Helpers.truncate_string(@search_result.message.title) %></div>
    <div>
      <span class="text-xs text-gray-600 font-bold">Message</span>
    </div>
  </div>
</div>
<% end %>
