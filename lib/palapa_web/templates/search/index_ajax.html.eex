<%= if Enum.any?(@search_results) do %>
  <ul class="list-reset">
    <%= for search_result <- @search_results do %>            
      <li class="py-4 border-b border-grey-lightest rounded" data-target="search.result">
        <%= render search_result_template_path(search_result), Map.put(assigns, :search_result, search_result) %>
      </li>
    <% end %>

    <li class="mt-2 text-center btn bg-grey-light rounded" data-target="search.result">
      <%= link "See all the results", to: search_path(@conn, :index, @current_organization, query: @conn.params["query"]), class: "text-grey-darkest font-bold" %>
    </li>
  </ul>  
<% else %>
  <div class="text-center text-sm text-grey font-bold w-64">No results</div>
<% end %>
